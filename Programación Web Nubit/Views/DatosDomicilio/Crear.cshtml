@model Programación_Web_Nubit.Models.Datos_domicilio
   
@{
	 ViewData["Title"] = " CrearDato_domicilio";
}
<head>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com">
	<link href="https://fonts.googleapis.com/css2?family=Fredoka+One&family=Play&display=swap" rel="stylesheet">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link rel="preconnect" href="https://fonts.gstatic.com">
	<link href="https://fonts.googleapis.com/css2?family=Fredoka+One&family=Play&display=swap" rel="stylesheet">
	<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&family=Oswald:wght@300&family=Roboto&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://necolas.github.io/normalize.css/8.0.1/normalize.css">
	<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="~/css/D_personales.css"/>
	<title>Nubit</title>
</head>

<body>
	<h4 class="form-label__titulos"><span> Datos de Domicilio </span></h4>

	<main >
		<form asp-action="CrearDato_domicilio" method="post">
		<!-- Grupo: Usuario -->
		<div class="formulario__grupo" id="grupo__CPP">
			<label asp-for="cp" class="formulario__label">Codigo postal</label>
			<div class="formulario__grupo-input">
				<input asp-for="cp" class="formulario__input" placeholder="4491234567">
				<i class="formulario__validacion-estado fas fa-times-circle"></i>
			</div>
			<p class="formulario__input-error">El telefono solo puede contener numeros y el maximo son 14 dígitos.</p>
		</div>


		<div class="formulario__grupo" id="grupo__Asentamiento">
			<label asp-for="direccion" class="formulario__label">Direccion</label>
			<div class="formulario__grupo-input">
				<input asp-for="direccion" class="formulario__input"  id="Asentamiento"
					placeholder="SRX03122HQRNCSAT">
				<i class="formulario__validacion-estado fas fa-times-circle"></i>
			</div>
			<p class="formulario__input-error">La CURP tiene que ser de 16 dígitos y solo puede contener numeros, letras
			</p>

		</div>
		<div class="formulario__grupo" id="grupo__Asentamiento">
			<label asp-for="referencia" class="formulario__label">Referencia</label>
			<div class="formulario__grupo-input">
				<input asp-for="referencia" class="formulario__input" id="Asentamiento"
					placeholder="SRX03122HQRNCSAT">
				<i class="formulario__validacion-estado fas fa-times-circle"></i>
			</div>
			<p class="formulario__input-error">La CURP tiene que ser de 16 dígitos y solo puede contener numeros, letras
			</p>
		</div>


		<div class="formulario__mensaje" id="formulario__mensaje">
			<p><i class="fas fa-exclamation-triangle"></i> <b>Error:</b> Por favor rellena el formulario correctamente.
			</p>
		</div>

		<div class="formulario__grupo formulario__grupo-btn-enviar">
				<br />
				<button type="submit" class="formulario__btn">Guardar</button>
				<p class="formulario__mensaje-exito" id="formulario__mensaje-exito">Formulario enviado exitosamente!</p>
				<button class="formulario__btn" asp-controller="DatosEscolares" asp-action="Crear">Siguiente</button>

		</div>

	</form>

	</main>
</body>

