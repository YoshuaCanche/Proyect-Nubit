@model Programación_Web_Nubit.Models.Datos_laborales

@{
    ViewData["Title"] = "Editar Datos Laborales";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white">
                    <strong>Editar Datos Laborales</strong>
                </h1>
            </div>
            <div class="card-body">
                <form asp-action="EditarDatosLaborales" method="post">
                    @*OBTENEMOS EL ID DEL USUARIO PERO SE LO OCULTAMOS AL USUARIO*@
                    <input asp-for="Pkdatoslaborales"/>
                    @*<input type="hidden" asp-for="PkArticulo" />*@
                    <div class="form-group">
                        <label asp-for="Nombrempresa">Nombre de empresa</label>
                        <input asp-for="Nombrempresa" class="form-control" placeholder="Ingrese el nombre de la empresa" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="lugartrabajo">Lugar de trabajo</label>
                        <input asp-for="lugartrabajo" class="form-control" placeholder="Ingrese su lugar de trabajo" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="puestoempeñado">Puesto desempeñado</label>
                        <input asp-for="puestoempeñado" class="form-control" placeholder="Ingrese el puesto desempeñado" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="tiempoprestado">Tiempo prestado</label>
                        <input asp-for="tiempoprestado" class="form-control" placeholder="Ingrese el tiempo prestado" required />
                    </div>
                    
                    
                    <div class="container-fluid">
                        <button type="submit" class="btn btn-outline-success">
                            <i class="fa-solid fa-plus"></i> Editar
                        </button>
                    </div>
                </form>
                <br />
                <a class="btn btn-outline-dark" asp-controller="PerfilUsuario" asp-action="Index">
                    <i class="fa-solid fa-arrow-rotate-left"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>