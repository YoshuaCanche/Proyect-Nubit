@{
}
<link rel="stylesheet" href="~/css/PerfilUsuario.css"/>
<h1>Perfil de Usuario</h1>
<div class="tabs">
  <div class="tab-container">
      <div id="tab4" class="tab"> 
      <a href="#tab4">Datos Laborales</a>
      <div class="tab-content">
          @if (Model.Count() > 0)
                {
                    @foreach (var Item in Model)
                    {
                        <div>
                            <label>Nombre de empresa</label>
                        </div>
                        <br />
                        <div>
                            <text>@Html.DisplayFor(z => Item.datos_laborales.Nombrempresa)</text>
                        </div>  
                        <br />
                        <div>
                            <label>Lugar de trabajo</label>
                        </div>
                        <br />
                        <div>
                            <text>@Html.DisplayFor(z => Item.datos_laborales.lugartrabajo)</text>
                        </div>  
                        <br />
                        <div>
                            <label>Puesto desempeñado</label>
                        </div>
                        <br />
                        <div>
                            <text>@Html.DisplayFor(z => Item.datos_laborales.puestoempeñado)</text>
                        </div>  
                        <br />
                        <div>
                            <label>Tiempo prestado</label>
                        </div>
                        <br />
                        <div>
                            <text>@Html.DisplayFor(z => Item.datos_laborales.tiempoprestado)</text>
                        </div>
                        <br />
                        <a asp-controller="PerfilUsuario" asp-action="EditarDatosLaborales" asp-route-id="@Item.datos_laborales.Pkdatoslaborales" class="btn btn-info">Editar</a>
                    }
                }
            </div>
    </div>
