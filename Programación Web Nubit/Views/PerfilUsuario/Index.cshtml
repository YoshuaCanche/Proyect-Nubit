                            <div>
                                <label>Telefono :  <text>@Html.DisplayFor(z => Item.datos_personales.telefono)</text></label>
                            </div>
                            <br /> 
                            <br />

                            <a asp-controller="PerfilUsuario" asp-action="EditarDatosPersonales" asp-route-id="@Item.datos_personales.Pkdatospersonales" class="btn btn-info">Editar</a>
                        }
                    }
                }
            </div> 
            
    </div> 
  </div>
</div>