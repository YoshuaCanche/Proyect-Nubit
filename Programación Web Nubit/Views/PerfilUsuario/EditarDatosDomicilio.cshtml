@model Programación_Web_Nubit.Models.Datos_domicilio

@{
    ViewData["Title"] = "Editar Datos Domicilio";
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/PerfilUsuario.css"/>
<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white">
                    <strong>Editar Datos Domicilio</strong>
                </h1>
            </div>
            <div class="card-body">
                <form asp-action="EditarDatosDomicilio" method="post">
                    @*OBTENEMOS EL ID DEL USUARIO PERO SE LO OCULTAMOS AL USUARIO*@
                    <input type="hidden" asp-for="Pkdatosdomicilio"/>
                    @*<input type="hidden" asp-for="PkArticulo" />*@
                    <div class="form-group">
                        <label class="formulario__label" asp-for="direccion">Direccion : </label>
                        <input class="formulario__input" asp-for="direccion" placeholder="Ingrese su direccion" required />
                    </div>
                    <div class="form-group">
                        <label class="formulario__label" asp-for="cp">Codigo Postal : </label>
                        <input class="formulario__input" asp-for="cp" placeholder="Ingrese su codigo postal" required />
                    </div>
                    <div class="form-group">
                        <label class="formulario__label" asp-for="referencia">Referencia : </label>
                        <input class="formulario__input" asp-for="referencia" placeholder="Ingrese la referencia" required />
                    </div>
                    
                    
                    <div class="container-fluid">
                        <br />
                        <br />
                        <button type="submit" class="btn btn-outline-success">
                            <i class="fa-solid fa-plus"></i> Editar
                        </button>
                    </div>
                </form>
                <br />
                <br />
                <a class="btn btn-outline-dark" asp-controller="PerfilUsuario" asp-action="Index">
                    <i class="fa-solid fa-arrow-rotate-left"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>
