@model Programación_Web_Nubit.Models.Datos_personales

@{
    ViewData["Title"] = "Editar Datos Personales";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white">
                    <strong>Editar Datos Personales</strong>
                </h1>
            </div>
            <div class="card-body">
                <form asp-action="EditarDatosPersonales" method="post">
                    @*OBTENEMOS EL ID DEL USUARIO PERO SE LO OCULTAMOS AL USUARIO*@
                    <input type="hidden" asp-for="Pkdatospersonales"/>
                 
                    <div class="form-group">
                        <label asp-for="nombres">Nombres</label>
                        <input asp-for="nombres" class="form-control" placeholder="Ingrese sus nombres" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="apellidos">Apellidos</label>
                        <input asp-for="apellidos" class="form-control" placeholder="Ingrese sus apellidos" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="nacionalidad">Nacionalidad</label>
                        <input asp-for="nacionalidad" class="form-control" placeholder="Ingrese su nacionalidad" required />
                    </div>
                     <div class="form-group">
                        <label asp-for="fechadenacimiento">Fecha de Nacimiento</label>
                        <input asp-for="fechadenacimiento" class="form-control" placeholder="Ingrese su fecha de nacimiento" required />
                    </div>
                     <div class="form-group">
                        <label asp-for="telefono">Telefono</label>
                        <input asp-for="telefono" class="form-control" placeholder="Ingrese su telefono" required />
                    </div>

                    <div class="container-fluid">
                        <button type="submit" class="btn btn-outline-success">
                            <i class="fa-solid fa-plus"></i> Editar
                        </button>
                    </div>
                </form>
                <br />
                <a class="btn btn-outline-dark" asp-controller="PerfilUsuario" asp-action="Index">
                    <i class="fa-solid fa-arrow-rotate-left"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>
