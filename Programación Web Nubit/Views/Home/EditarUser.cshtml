@model Programación_Web_Nubit.Models.Perfil_de_trabajo

<h1>
    @ViewData["Title"]="Editar cliente";
</h1>

<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"> <strong>Editar Servicio</strong></h1>

            </div>

            <div class="card-body">

                <form asp-action="UpdateUser" method="post">

                    <input type="hidden" asp-for="PkPt" />

                    <div class="form-group">
                        <label asp-for="Usuario">Nombre</label>
                        <input asp-for="Usuario" class="form-control" placeholder="ingresar nombre de usuario" required />
                    </div>

                    <div class="form-group">
                        <label asp-for="Contraseña">Descripcion</label>
                        <input asp-for="Contraseña" class="form-control" placeholder="Contraseña" required />
                    </div>

                    <div class="form-group">
                        <select asp-for="Fk_rol" asp-items=" ViewBag.Roles" class="select2-placeholder-multiple form-control">
                            <option value=""> -- Selecciona --</option>
                        </select>
                    </div>

                    <div class="container-fluid">
                        <button type="submit" class="btn btn-outline-success"><i class="fa-solid fa-plus"></i>Editar</button>
                    </div>

                </form>

                <br />
                <br />

                <a class="btn-outline-dark" asp-controller="Home" asp-action="dashboard_serv"><i class="fa-solid fa-arrow-left"></i></a>

            </div>

        </div>

    </div>

</div>

</div>